                    <td>
                     <%= f.label :max_speed %><br />
                    </td>
                    <td>  
                     <%= f.text_field :max_speed %>
                    </td>
                  </tr>    
                  <tr>
                    <td>
                       <%= f.label :water_capacity %><br />
                    </td>
                    <td>
                       <%= f.text_field :water_capacity %>
                    </td>    
                  </tr>
                  <tr>
                    <td>
                       <%= f.label :holding_capacity %><br />
                    </td>
                    <td>
                      <%= f.text_field :holding_tank %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                       <%= f.label :hin %><br />
                    </td>
                    <td>    
                      <%= f.text_field :hin %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :range %>
                    </td>
                    <td>
                      <%= f.text_field :range %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :Bridge %>
