                  </tr>  
                  <tr>
                    <td>
                       <%= f.label :Cabins %><br />
                    </td>
                    <td>    
                      <%= f.text_field :cabins %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                     <%= f.label :Berths %><br />
                    </td>
                    <td>   
                     <%= f.text_field :berths %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :Deck %>
                    </td>
                    <td>
                      <%= f.text_field :deck %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :Salon %>
                    </td>
                    <td>
                      <%= f.text_field :salon %>
                    </td>
                 </tr>
                 <tr>
                   <td>
                     <%= f.label :Helm %>
                   </td>
                   <td>
                     <%= f.text_field :helm %>
                   </td>
                </tr>                    
                </table>
              </td>
              <td style="width:400px;vertical-align:top;">
                <table>
                  <tr>
                    <td style="width:95px;">                             
                        <%= f.label :Cruise_speed %><br />
                    </td>
                    <td>     
                        <%= f.text_field :crusing_speed %>
