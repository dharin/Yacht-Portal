                  <td>
                    <%= f.text_field :cockpit %>
                  </td>
                </tr>                           
                </table>
              </td>
            </tr>
          </table>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <table>
          <tr>
            <td width="200"><h3>Engine Specs</h3></td>
            <td><%= link_to_function "Toggle Engine Specs", visual_effect(:toggle_blind,:divengine) %></td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td>
        <div id="divengine">
          <table>
            <tr>
              <td style="width:450px;vertical-align:top;">
                <table>
                  <tr>
                    <td style="width:95px;">
                       <%= f.label :engine_maker_id %><br />
                    </td>
                    <td>    
                      <%= collection_select(:yacht,:engine_maker_id,@engineemakers,:id,:name) %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                       <%= f.label :engine_model %><br />
